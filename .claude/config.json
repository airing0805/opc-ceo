{
  "project": {
    "name": "OPC-CEO",
    "description": "一人公司的 CEO Agent 系统，基于 Claude Code Skills/Agents 实现"
  },
  "paths": {
    "gitRepositoryDir": "E:/repository_git",
    "tempDir": "tmp/",
    "docsDir": "docs",
    "skillsDir": ".claude/skills",
    "agentsDir": ".claude/agents"
  },
  "naming": {
    "useChineseNames": true
  },
  "entityId": {
    "task": {
      "format": "v{大版本}.{小版本}.{修订版本}",
      "example": "v2.3.1.1",
      "note": "直接对应版本规划中的任务组标记"
    },
    "coordinationEvent": {
      "format": "COORD-YYYY-MM-DD-NNN",
      "example": "COORD-2026-02-24-001"
    },
    "conversation": {
      "format": "CONV-YYYY-MM-DD-NNN",
      "example": "CONV-2026-02-24-001"
    },
    "evolutionDecision": {
      "format": "EVO-YYYY-MM-DD-NNN",
      "example": "EVO-2026-02-25-001"
    },
    "project": {
      "format": "PROJ-NNN",
      "example": "PROJ-001"
    },
    "transaction": {
      "format": "TXN-YYYY-MM-DD-NNN",
      "example": "TXN-2026-02-23-001"
    }
  },
  "skills": {
    "entryFileName": "SKILL.md",
    "quickRefFileName": "快速参考.md",
    "useChineseModuleNames": true
  }
}
